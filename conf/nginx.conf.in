server_tokens off;
access_log /dev/fd/1 main;

server {
    listen 80 default_server;
    root /qmk_configurator/dist;
    index index.html;
    server_name _;

    location / {
        try_files $uri $uri/ =404;
    }

    location /api/ {
        rewrite ^/api(/.*)$ /$1 break;
        proxy_pass ${QMK_API_URL};
    }

    location /docs/ {
        root /qmk_compiler/qmk_firmware/docs;
    }
}
